<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dawFaceBackground"
    android:padding="5dp"
    android:layout_margin="0dp">

    <TextView
        android:id="@+id/face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:textColor="@color/dawSecondaryTextColor"
        android:textSize="36sp"/>

    <TextView
        android:id="@+id/price"
        android:padding="5dp"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:textColor="@color/dawSecondaryTextColor"
        android:layout_below="@id/face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ToggleButton
        android:id="@+id/button"
        android:layout_below="@id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/check"
        android:textColor="@color/dawPrimaryTextColor"
        android:textOff="@string/button_off"
        android:textOn="@string/button_on"/>

    </RelativeLayout>


