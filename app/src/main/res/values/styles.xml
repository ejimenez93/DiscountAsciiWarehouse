<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/dawPrimaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/dawSecondaryBackgroundColor</item>
        <item name="colorAccent">@color/dawBackgroundColor</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dawBackgroundColor</item>
    </style>

    <style name="Theme.DAW" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/dawPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/dawBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/dawPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/dawPrimaryTextColor</item>
        <item name="android:background">@color/dawPrimaryBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dawPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent=""></style>

</resources>
